<div class="col-md-6">
  <h2><%= @train.identifier() %></h2>
  <h4><%= @train.driver() %></h4>
  <h4><%= @train.num_cars() %></h4>
  <% if @train.cities().any?() %>
    <h4>The train stops in those cities:</h4>
      <ul>
        <%@train.cities().each() do |city|%>
          <li><%= city.name()%></li>
        <% end %>
      </ul>
  <% end %>
</div>
<div class="col-md-6">
  <form action="/trains/<%= @train.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="identifier">identifier</label>
      <input class="form-control" type="text" name="identifier">
    </div>
    <div class="form-group">
      <label for="driver">Driver</label>
      <input class="form-control" type="text" name="driver">
    </div>
    <div class="form-group">
      <label for="num_cars">Number of cars</label>
      <input class="form-control" type="number" name="num_cars">
    </div>
    <% @cities.each() do |city| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="city_ids[]" value="<%= city.id() %>"><%= city.name()%>
        </label>
      </div>
    <% end %>
    <div class="btn-group">
      <button class="btn btn-primary" type="submit">Update Train</button>
    </div>
  </form>
  <form class="float" action="/trains/<%= @train.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <div class="btn-group float">
      <button class="btn btn-primary" type="submit">Delete Train</button>
    </div>
  </form>
</div>
