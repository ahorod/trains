<div class="col-md-6">
  <h2><%= @city.name() %></h2>
</div>
<div class="col-md-6">
  <form action="/cities/<%= @city.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="name">Name</label>
      <input class="form-control" type="text" name="name">
    </div>
    <div class="btn-group">
      <button class="btn btn-primary" type="submit">Update City</button>
    </div>
  </form>
  <form class="float" action="/cities/<%= @city.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <div class="btn-group float">
      <button class="btn btn-primary" type="submit">Delete City</button>
    </div>
  </form>
</div>
