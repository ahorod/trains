<div class="row">
  <div class="col-md-6">
    <h2><%= @city.name() %></h2>
    <br>
    <% if @city.trains().any?() %>
      <h4>These trains are stopping at <i><%= @city.name() %></i>:</h4>
      <ul>
        <% @city.trains().each() do |train| %>
          <li><%= train.identifier() %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-6">
    <form action="/cities/admin/<%= @city.id() %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name">
      </div>
      <h4>Trains</i></h4>
      <% @trains.each() do |train| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="train_ids[]" value="<%= train.id() %>"><%= train.identifier() %>
          </label>
        </div>
      <% end %>
      <div class="btn-group">
        <button class="btn btn-primary" type="submit">Update City</button>
      </div>
    </form>
    <br>
    <form class="float" action="/cities/<%= @city.id() %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <div class="btn-group float">
        <button class="btn btn-primary" type="submit">Delete City</button>
      </div>
    </form>
  </div>
</div>
